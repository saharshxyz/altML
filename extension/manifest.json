{
  "name": "altML: AI-generated alt tags for screenreaders",
  "short_name": "altML",
  "version": "1.0.0",
  "version_name": "1.0.0-pre-alpha",
  "homepage_url": "https://github.com/saharshy29/altML",
  "description": "A chrome extension that looks at all the images on a webpage. If there is an image that does not have an alt tag, use ml to generate one so that screen-readers can actually recognize it.",
  "incognito": "not_allowed",
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "storage"
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": { "16": "assets/icons/16icon.png",
             "24": "assets/icons/24icon.png",
             "32": "assets/icons/32icon.png",
             "48": "assets/icons/48icon.png",
             "64": "assets/icons/64icon.png",
             "128": "assets/icons/128icon.png",
             "256": "assets/icons/256icon.png"},
  "browser_action": {
    "default_title": "altML",
    "default_popup": "popup/popup.html",
    "default_icons": { "16": "assets/icons/16icon.png",
                       "24": "assets/icons/24icon.png",
                       "32": "assets/icons/32icon.png",
                       "48": "assets/icons/48icon.png",
                       "64": "assets/icons/64icon.png",
                       "128": "assets/icons/128icon.png",
                       "256": "assets/icons/256icon.png"}
  },
  "manifest_version": 2
}