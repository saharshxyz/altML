{
  "name": "altML",
  "version": "1.0.0",
  "version_name": "1.0.0-pre-alpha",
  "description": "Build an Extension!",
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "manifest_version": 2
}